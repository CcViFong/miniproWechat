    align-items: center;
    font-size: 14px;
    padding: 0 10rpx;
}
.title-left{
    flex: 1;
}
.title-right{
    width: 100rpx;
    color: red;
    font-size: 13px;
    text-decoration: underline;
}
.sort-scroll{
    white-space: nowrap;
    display: flex    
}
.scroll-contain{
    width:250rpx;
    height: 350rpx;
    display: inline-block;
    margin: 0 10rpx;
}

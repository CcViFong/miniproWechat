page{
    background-color: #f8f8f8;
}
.swiper-img{
    width: 100%;
}

.home-sort{
    width: 100%;
    background-color: #fff; 
    margin: 20rpx 0;
}

.sort-title{
    display: flex;
    flex-direction: row; 
    height: 60rpx;  
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
    padding: 0 10rpx;
}
.title-left{
    flex: 1;
}
.title-right{
    width: 100rpx;
    color: #333;
    font-size: 18px;
    font-weight: 700
}
.sort-scroll{
    white-space: nowrap;
    display: flex    
}
.scroll-contain{
    width:250rpx;
    height: 350rpx;
    display: inline-block;
    margin: 0 10rpx;
}
.scroll-img{
    width:100%;
    height:100%
}
.scroll-desc{
    font-size: 12px;
    text-align: center;
}

.footer-line{
    display: flex;
    justify-content: center;
    align-items: center;
}

.line-left,.line-right{
    width: 150rpx;
    height: 1rpx;
    border-top: 2px solid #8DB6CD;
    border-radius:2rpx; 
}

.line-middle{
    width: 130rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 12px;
    color: #8DB6CD;
}
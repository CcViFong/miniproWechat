.personal-contain{

}
.person-login{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 15rpx 0;
}
.person-head{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    background-color: red;
}
.head-img{
    width: 100%;
    height: 100%;
}
.person-name{
    width: 200rpx;
    text-align: center;
    margin: 10rpx 0;
    font-size: 16px;
    font-weight: 700;   
}
.person-items{
    margin-top: 30rpx; 
}

.items-row{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 15rpx;
    height: 40rpx;
    border-bottom: 1px #ccc solid;
}
.items-row:first-child{
    border-top: 1px #ccc solid;
}
.rrow-left-icon{
    width: 50rpx;
    font-size: 26px;
    font-weight: 700;
}
.row-text{
    flex: 1;
    font-size: 16px;
    padding: 0 20rpx;
}
.row-right-icon{
    width: 50rpx;
    font-size: 24px;
    font-weight: 700;
}